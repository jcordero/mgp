<ayaxphpclass>

	<!-- Clase reporte mapa  -->
	<make object="class">
            <build out_file="class_reportes.php" classname="reportes" classlabel="Reportes">
                <parse tablename="reportes" />
                    <field name="tmp_prestacion" type="varchar" size="50" isfordb="false" />
                    <field name="tmp_estado" type="varchar" size="50" isfordb="false" />
                    <field name="tmp_barrio" type="varchar" size="50" isfordb="false" />
                    <field name="tmp_fecha" type="varchar" size="50" isfordb="false" />
		</build>
	</make>


        <!-- Formulario Reporte Mapa -->
	<make object="table_maint">
            <build out_file="mapeo.php" classname="reportes" title="Reporte en mapa">
                <include file="mapeo.css"/>
                <include file="mapeo.js"/>
                <include file="http://maps.google.com/maps/api/js?key=AIzaSyDbNPUeZ1qDaGdShuVhRIT9Cgb_NZzuPRw&amp;sensor=false"/>
                <include file="markerclusterer.js"/>

                <!-- Datos personales -->
                <group title="Filtro" id="filtro" render_html="block">
                    <field name="tmp_prestacion" presentation="REPORTES::PRESTACIONES" label="Prestaci贸n" />
                    <field name="tmp_estado" presentation="REPORTES::ESTADO_TICKET" label="Estado" />
                    <field name="tmp_barrio" presentation="REPORTES::BARRIO" label="Barrio" />
                    <field name="tmp_fecha" presentation="DATERANGE" label="Fecha ingreso" />
                </group>
                
		</build>
	</make>


        <!-- Formulario Reporte x Prestacion -->
	<make object="table_maint">
            <build out_file="por_prestacion.php" classname="reportes" title="Reporte por prestaci贸n">
                <include file="por_prestacion.css"/>
                <include file="por_prestacion.js"/>

                <!-- Datos personales -->
                <group title="Filtro" id="filtro" render_html="block">
                    <field name="tmp_barrio" presentation="TEXT" label="Barrio" />
                    <field name="tmp_fecha" presentation="DATERANGE" label="Fecha" />
                </group>
                
		</build>
	</make>


        <!-- Formulario Reporte x Barrio -->
	<make object="table_maint">
            <build out_file="por_barrio.php" classname="reportes" title="Reporte por barrio">
                <include file="por_barrio.css"/>
                <include file="por_barrio.js"/>

                <!-- Datos personales -->
                <group title="Filtro" id="filtro" render_html="block">
                    <field name="tmp_barrio" presentation="TEXT" label="Barrio" />
                    <field name="tmp_fecha" presentation="DATERANGE" label="Fecha" />
                </group>
                
            </build>
	</make>


        <!-- Formulario Reporte x Tiempos de ejecucion -->
	<make object="table_maint">
            <build out_file="por_tiempos.php" classname="reportes" title="Reporte por tiempos de ejecucci贸n">
                <include file="por_tiempos.css"/>
                <include file="por_tiempos.js"/>

                <!-- Datos personales -->
                <group title="Filtro" id="filtro" render_html="block">
                    <field name="tmp_barrio" presentation="TEXT" label="Barrio" />
                    <field name="tmp_fecha" presentation="DATERANGE" label="Fecha" />
                </group>
                
            </build>
	</make>


	<!-- Clase indicadores  -->
	<make object="class">
            <build out_file="class_indicadores.php" classname="indicadores" classlabel="Indicadores">
                <parse in_file="../mgp.sql" tablename="tic_indicadores" />
  		</build>
	</make>

        <!-- Consulta Indicadores -->
	<make object="search_and_list">
            <build out_file="indicadores.php" classname="indicadores" title="Indicadores">
			
                <searchfield name="tin_code" presentation="INT" label="Codigo"/>
                <searchfield name="tin_nombre" presentation="TEXT" label="Nombre" />
                <searchfield name="tin_estado" presentation="ACTIVO" label="Estado" />
                <searchfield name="tin_tstamp" presentation="DATERANGE" label="Creado" />
                <searchfield name="use_code" presentation="USER" label="Operador" initialvalue=" "/>

                <listfield name="tin_code" presentation="INT" label="Codigo" readonly="true"/>
                <listfield name="tin_nombre" presentation="TEXT" label="Nombre" />
                <listfield name="tin_estado" presentation="ACTIVO" label="Estado" />
                <listfield name="tin_tstamp" presentation="DATERANGE" label="Creado" readonly="true" />
                <listfield name="use_code" presentation="USER" label="Operador" readonly="true" />

                <action operation="V" label="ver" 	target="indicador_maint.php?OP=V" >
                    <sendfield classname="indicadores" name="tin_code" />
                </action>

                <action operation="M" label="modificar" target="indicador_maint.php?OP=M" >
                    <sendfield classname="indicadores" name="tin_code" />
                </action>

            </build>
	</make>



        <!-- Formulario ABM de indicadores -->
	<make object="table_maint">
            <build out_file="indicador_maint.php" classname="indicadores" title="Gesti贸n de indicadores">
              
                <!-- tin_code, tin_nombre, use_code, tin_tstamp, tin_estado -->
                <group title="Indicador" id="indicador" render_html="block">
                    <field name="tin_code" presentation="INT" label="Codigo" readonly="true"/>
                    <field name="tin_nombre" presentation="TEXT" label="Nombre" />
                    <field name="tin_estado" presentation="ACTIVO" label="Estado" />
                </group>
                
                <group title="Auditoria" id="audit" render_html="block">
                    <field name="tin_tstamp" presentation="DATETIME" label="Creado" readonly="true" />
                    <field name="use_code" presentation="USER" label="Operador" readonly="true" />
                </group>
                
            </build>
	</make>




</ayaxphpclass>
